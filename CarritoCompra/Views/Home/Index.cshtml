@model  CarritoCompra.Models.Usuario
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-lg-8 col-md-8">

    </div>
    <div class="col-lg-4 col-md-4">
        <div class="panel panel-info" style="margin-top: 100px;">
            <div class="panel-heading">Loguin</div>
            <div class="panel-body">
                <div class="form-group">
                    @using (Ajax.BeginForm("ActionName", "ControllerName", new AjaxOptions
                    {
                        HttpMethod = "POST",
                        OnFailure = "",
                        OnBegin = "$(this).find('#submit-btn').button('loading');",
                        OnSuccess = ""
                    }))
                    {
                    <div class="form-group">
                        @Html.LabelFor(m => m.usuario)
                        @Html.TextBoxFor(m => m.usuario)
                        @Html.ValidationMessageFor(m => m.usuario)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.contrasena)
                        @Html.TextBoxFor(m => m.contrasena)
                        @Html.ValidationMessageFor(m => m.contrasena)

                    </div>
                        // Contenido del formulario
                        <input type="text" name="nombre" />
                        <input type="submit" value="Enviar" />
                    }
                    <div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

